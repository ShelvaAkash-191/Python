def categorize_books():
    book_dict = {}

    # Read input until a blank line is entered
    while True:
        try:
            book_entry = input().strip()
            if not book_entry:
                break

            # Split the input into title and genre
            title, genre = map(str.strip, book_entry.split(','))

            # Add book title to corresponding genre in the dictionary
            if genre not in book_dict:
                book_dict[genre] = [title]
            else:
                book_dict[genre].append(title)
        except ValueError:
            print("Error: Invalid input format. Please provide book title and genre separated by a comma.")

    # Output the categorized books
    for genre, books in book_dict.items():
        print(f"{genre}: {', '.join(books)}")

categorize_books()

